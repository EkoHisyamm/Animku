<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".InfoAnime">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_marginTop="2dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_close"/>

        <TextView
            android:id="@+id/tvJudul"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Judul Anime"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Detail"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEpisode"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Episode"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_below="@+id/tvEpisode"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Tipe"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tvDurasi"
                    android:layout_below="@+id/tvType"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Durasi"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tvStudio"
                    android:layout_below="@+id/tvDurasi"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Studio"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:id="@+id/tvGenre"
                    android:layout_below="@+id/tvStudio"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Genre"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tvSkor"
                    android:layout_below="@id/tvGenre"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Skor"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_below="@id/tvSkor"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Status"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tvTayang"
                    android:layout_below="@id/tvStatus"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Tayang"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiEpisode"
                    android:layout_toRightOf="@id/tvEpisode"
                    android:layout_toEndOf="@id/tvEpisode"
                    android:text=": "
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiType"
                    android:layout_toRightOf="@id/tvType"
                    android:layout_toEndOf="@id/tvType"
                    android:layout_below="@id/tvIsiEpisode"
                    android:text=": "
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiDurasi"
                    android:layout_toRightOf="@id/tvEpisode"
                    android:layout_toEndOf="@id/tvEpisode"
                    android:layout_below="@id/tvIsiType"
                    android:text=": "
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiStudio"
                    android:layout_toRightOf="@id/tvEpisode"
                    android:layout_toEndOf="@id/tvEpisode"
                    android:layout_below="@id/tvIsiDurasi"
                    android:text=": "
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiGenre"
                    android:layout_below="@id/tvIsiStudio"
                    android:layout_toRightOf="@id/tvEpisode"
                    android:layout_toEndOf="@id/tvEpisode"
                    android:text=": "
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiSkor"
                    android:layout_below="@id/tvGenre"
                    android:layout_toRightOf="@id/tvEpisode"
                    android:layout_toEndOf="@id/tvEpisode"
                    android:text=": "
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiStatus"
                    android:layout_below="@id/tvIsiSkor"
                    android:layout_toRightOf="@id/tvEpisode"
                    android:layout_toEndOf="@id/tvEpisode"
                    android:text=": "
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIsiTayang"
                    android:layout_below="@id/tvIsiStatus"
                    android:layout_toRightOf="@id/tvEpisode"
                    android:layout_toEndOf="@id/tvEpisode"
                    android:text=":"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="Sinopsis"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:id="@+id/tvSinopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="13dp"
                android:text="Isi sinopsi"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>